// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/data.db"
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  content      String
  url          String   @unique
  thumbnailUrl String?
  language     String
  sourceName   String
  createdDate  DateTime
}
